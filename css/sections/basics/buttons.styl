/* ==== button ==== */
$clrBlue1 = #53B5E6
$clrGreen = #2ACA76
.form_login
  .btn
      border 0px solid #000
      border-radius 5px
      padding 8px 16px
      cursor pointer
      text-align center
    .btn-confirm
      background $clrBlue1
      color #eee
      transition background 0.4s ease-in-out 
      &:hover
        background darken($clrBlue1, 10)
.form_button
  .btn
    height 30px
    width 30px
    display inline-block
    float right
  .btn-search i
    height 30px
    width 30px
    background url('/img/search.png') no-repeat center $clrGreen
    transition background 0.3s ease-in-out
    display inline-block
    &:hover
      background url('/img/search.png') no-repeat center darken($clrGreen, 10)
.form_button  
  .btn
    position relative
    background #666
    border 0
    cursor pointer
    color #fff
    border-radius 2px
    -webkit-appearance none
    -webkit-font-smoothing antialiased
    -webkit-tap-highlight-color transparent
    .ladda-spinner
      position absolute
      z-index 2
      display inline-block
      width 32px
      height 32px
      top 50%
      margin-top 0
      opacity 0
      pointer-events none
    .ladda-label
      position relative
      z-index 3
    .ladda-progress
      position absolute
      width 0
      height 100%
      left 0
      top 0
      background rgba(0,0,0,0.2)
      visibility hidden
      opacity 0
      -webkit-transition 0.1s linear all !important
      -moz-transition 0.1s linear all !important
      -ms-transition 0.1s linear all !important
      -o-transition 0.1s linear all !important
      transition 0.1s linear all !important
    &:hover
      border-color rgba(0,0,0,0.07)
      background-color #888

  .btn[data-loading]
    .ladda-progress
      opacity 1
      visibility visible

  .btn,.btn .ladda-spinner,.btn .ladda-label
    -webkit-transition 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275) all !important
    -moz-transition 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275) all !important
    -ms-transition 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275) all !important
    -o-transition 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275) all !important
    transition 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275) all !important

  .btn[data-style=zoom-in],.btn[data-style=zoom-in] .ladda-spinner,.btn[data-style=zoom-in] .ladda-label,.btn[data-style=zoom-out],.btn[data-style=zoom-out] .ladda-spinner,.btn[data-style=zoom-out] .ladda-label
    -webkit-transition 0.3s ease all !important
    -moz-transition 0.3s ease all !important
    -ms-transition 0.3s ease all !important
    -o-transition 0.3s ease all !important
    transition 0.3s ease all !important

  .btn[data-style=expand-right]
    .ladda-spinner
      right -6px

  .btn[data-style=expand-right][data-size="s"] .ladda-spinner,.btn[data-style=expand-right][data-size="xs"] .ladda-spinner
    right -12px

  .btn[data-style=expand-right][data-loading]
    padding-right 56px
    .ladda-spinner
      opacity 1

  .btn[data-style=expand-right][data-loading][data-size="s"],.btn[data-style=expand-right][data-loading][data-size="xs"]
    padding-right 40px

  .btn[data-style=expand-left]
    .ladda-spinner
      left 26px

  .btn[data-style=expand-left][data-size="s"] .ladda-spinner,.btn[data-style=expand-left][data-size="xs"] .ladda-spinner
    left 4px

  .btn[data-style=expand-left][data-loading]
    padding-left 56px
    .ladda-spinner
      opacity 1

  .btn[data-style=expand-left][data-loading][data-size="s"],.btn[data-style=expand-left][data-loading][data-size="xs"]
    padding-left 40px

  .btn[data-style=expand-up]
    overflow hidden
    .ladda-spinner
      top -32px
      left 50%
      margin-left 0

  .btn[data-style=expand-up][data-loading]
    padding-top 54px
    .ladda-spinner
      opacity 1
      top 26px
      margin-top 0

  .btn[data-style=expand-up][data-loading][data-size="s"],.btn[data-style=expand-up][data-loading][data-size="xs"]
    padding-top 32px

  .btn[data-style=expand-up][data-loading][data-size="s"] .ladda-spinner,.btn[data-style=expand-up][data-loading][data-size="xs"] .ladda-spinner
    top 4px

  .btn[data-style=expand-down]
    overflow hidden
    .ladda-spinner
      top 62px
      left 50%
      margin-left 0

  .btn[data-style=expand-down][data-size="s"] .ladda-spinner,.btn[data-style=expand-down][data-size="xs"] .ladda-spinner
    top 40px

  .btn[data-style=expand-down][data-loading]
    padding-bottom 54px
    .ladda-spinner
      opacity 1

  .btn[data-style=expand-down][data-loading][data-size="s"],.btn[data-style=expand-down][data-loading][data-size="xs"]
    padding-bottom 32px

  .btn[data-style=slide-left]
    overflow hidden
    .ladda-label
      position relative
    .ladda-spinner
      left 100%
      margin-left 0

  .btn[data-style=slide-left][data-loading]
    .ladda-label
      opacity 0
      left -100%
    .ladda-spinner
      opacity 1
      left 50%

  .btn[data-style=slide-right]
    overflow hidden
    .ladda-label
      position relative
    .ladda-spinner
      right 100%
      margin-left 0
      left 16px

  .btn[data-style=slide-right][data-loading]
    .ladda-label
      opacity 0
      left 100%
    .ladda-spinner
      opacity 1
      left 50%

  .btn[data-style=slide-up]
    overflow hidden
    .ladda-label
      position relative
    .ladda-spinner
      left 50%
      margin-left 0
      margin-top 1em

  .btn[data-style=slide-up][data-loading]
    .ladda-label
      opacity 0
      top -1em
    .ladda-spinner
      opacity 1
      margin-top 0

  .btn[data-style=slide-down]
    overflow hidden
    .ladda-label
      position relative
    .ladda-spinner
      left 50%
      margin-left 0
      margin-top -2em

  .btn[data-style=slide-down][data-loading]
    .ladda-label
      opacity 0
      top 1em
    .ladda-spinner
      opacity 1
      margin-top 0

  .btn[data-style=zoom-out]
    overflow hidden
    .ladda-spinner
      left 50%
      margin-left 32px
      -webkit-transform scale(2.5)
      -moz-transform scale(2.5)
      -ms-transform scale(2.5)
      -o-transform scale(2.5)
      transform scale(2.5)
    .ladda-label
      position relative
      display inline-block

  .btn[data-style=zoom-out][data-loading]
    .ladda-label
      opacity 0
      -webkit-transform scale(0.5)
      -moz-transform scale(0.5)
      -ms-transform scale(0.5)
      -o-transform scale(0.5)
      transform scale(0.5)
    .ladda-spinner
      opacity 1
      margin-left 0
      -webkit-transform none
      -moz-transform none
      -ms-transform none
      -o-transform none
      transform none

  .btn[data-style=zoom-in]
    overflow hidden
    .ladda-spinner
      left 50%
      margin-left -16px
      -webkit-transform scale(0.2)
      -moz-transform scale(0.2)
      -ms-transform scale(0.2)
      -o-transform scale(0.2)
      transform scale(0.2)
    .ladda-label
      position relative
      display inline-block

  .btn[data-style=zoom-in][data-loading]
    .ladda-label
      opacity 0
      -webkit-transform scale(2.2)
      -moz-transform scale(2.2)
      -ms-transform scale(2.2)
      -o-transform scale(2.2)
      transform scale(2.2)
    .ladda-spinner
      opacity 1
      margin-left 0
      -webkit-transform none
      -moz-transform none
      -ms-transform none
      -o-transform none
      transform none

  .btn[data-style=contract]
    overflow hidden
    width 100px
    .ladda-spinner
      left 50%
      margin-left 0

  .btn[data-style=contract][data-loading]
    border-radius 50%
    width 52px
    .ladda-label
      opacity 0
    .ladda-spinner
      opacity 1

  .btn[data-style=contract-overlay]
    overflow hidden
    width 100px
    box-shadow 0px 0px 0px 2000px transparent
    .ladda-spinner
      left 50%
      margin-left 0

  .btn[data-style=contract-overlay][data-loading]
    border-radius 50%
    width 52px
    box-shadow 0px 0px 0px 2000px rgba(0,0,0,0.8)
    .ladda-label
      opacity 0
    .ladda-spinner
      opacity 1

  .btn[data-color=green]
    background #2aca76

  .btn[data-color=green]:hover
    background-color #38d683

  .btn[data-color=blue]
    background #53b5e6

  .btn[data-color=blue]:hover
    background-color #69bfe9

  .btn[data-color=red]
    background #ea8557

  .btn[data-color=red]:hover
    background-color #ed956e

  .btn[data-color=purple]
    background #9973C2

  .btn[data-color=purple]:hover
    background-color #a685ca

  .btn[data-color=mint]
    background #16a085

  .btn[data-color=mint]:hover
    background-color #19b698

  .btn[disabled],.btn[data-loading]
    border-color rgba(0,0,0,0.07)

  .btn[disabled],.btn[disabled]:hover,.btn[data-loading],.btn[data-loading]:hover
    cursor default
    background-color #999

  .btn[data-size=xs]
    padding 4px 8px
    .ladda-label
      font-size 0.7em

  .btn[data-size=s]
    padding 6px 10px
    .ladda-label
      font-size 0.9em

  .btn[data-size=l]
    .ladda-label
      font-size 1.2em

  .btn[data-size=xl]
    .ladda-label
      font-size 1.5em

